extends ../../layouts/default

block main

    if(product.title)
        h1(class="mb-4") <b>#{product.title}</b>

    if(product.price)
        h1(class="mb-4") Giá: <b>#{product.price}$</b>
    
    if(product.discountPercentage)
        h1(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

    if(product.stock)
        h1(class="mb-4") Còn lại: <b>#{product.stock}</b>

    if(product.thumbnail)
        div(class="mb-4")
            img(
                src= product.thumbnail 
                style= "width: 100px"
            )

    if(product.status)
        div(class="mb-4")
            span Trạng thái: 
            if (product.status === "active")
                span(class="btn btn-success") Hoạt động
            else 
                span(class="btn btn-danger") Dừng hoạt động
    
    if(product.position)
        h1(class="mb-4") Vị trí: <b>#{product.position}</b>

    if(product.description)
        h1(class="mb-4") Mô tả:  !{product.description} 

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class = "btn btn-warning"
    ) Chỉnh sửa

    script(src="/admin/js/product.js")