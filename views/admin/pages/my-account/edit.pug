extends ../../layouts/default
include ../../mixins/alert
include ../../mixins/select-tree

block main
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Cập nhập thông tin cá nhân
    form(
            action=`${prefixAdmin}/my-account/edit?_method=PATCH` 
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value= user.fullName
                    required
                )
            div(class="form-group")
                label(for="email") Email
                input(
                    type= "email"
                    class="form-control"
                    id="email"
                    name="email"
                    value= user.email
                )
            div(class="form-group")
                label(for="password") Mật khẩu
                input(
                    type= "password"
                    class="form-control"
                    id="password"
                    name="password"
                )
            div(class="form-group")
                label(for="phone") Số điện thoại 
                input(
                    type= "text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value= user.phone
                )
            div(
                class="form-group form-image"
                upload-image 
            )
                label(for="avatar" class="d-block") Ảnh đại diện
                input(
                    type= "file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                if(user.avatar)
                    img(
                    src=user.avatar
                    upload-image-preview
                    class="image-preview"
                    )
            div(class="form-group")
                label(for="position") 
                button(
                    type= "submit"
                    class="btn btn-primary"
                ) Cập nhập