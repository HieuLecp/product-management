doctype html 
html 
    head 
        title #{pageTitle}

        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css")
        
        link(rel="stylesheet", href="/css/style.css")

        link(rel="stylesheet", href="https://unpkg.com/file-upload-with-preview/dist/style.css")

        <link  href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.css" rel="stylesheet">

    body 
        .wrapper
            include ../partials/header.pug

            block dashboard

            .content
                block main 

            button.chatbot-toggle.chatbot-toggle-outside
                <img src="/images/chatBot.jpeg" class="avatar" >
            .chatbot-container
                .chatbot-header
                    div.chatbot-title
                        <img src="/images/chatBot.jpeg" class="avatar" >
                    button.chatbot-toggle
                        span X
                .chatbot-body.hidden
                    .chatbot-messages#chatbotMessages
                        .chatbot-message.bot Xin chào! Tôi có thể giúp gì cho bạn hôm nay?
                    .chatbot-input
                        input#chatbotInput(type="text" placeholder="Nhập câu hỏi của bạn...")
                        button#chatbotSend Gửi

            include ../partials/footer.pug 


        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js")
        
        //- SocketIo
        script(src="/socket.io/socket.io.js")
        script(src="/js/socket.js")

        <script type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js"></script>

        <script type="module" src="https://unpkg.com/file-upload-with-preview/dist/index.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.js"></script>
        
        script(src="/js/script.js")
        script(src="/js/chatbot.js")
        
        block script 