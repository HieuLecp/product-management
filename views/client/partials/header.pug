include ../mixins/sub-menu.pug

header.header 
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo
                    a(href="/")
                        //- img(src="/images/avt.jpeg", alt="Avt", width="100px", height= "auto")
                    a(href="/" ) Trang chủ
            .col-5 
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type= "text"
                            placeholder= "Nhập từ khoá"
                            class="form-control"
                            name="keyword"
                            value= keyword
                        )
                        button(
                            type= "submit"
                            class="btn btn-primary"
                        ) Tìm

            .col-4
                .inner-menu 
                    ul 
                        li(class="sub-menu")
                            - const pathProduct = "/product";
                            a(href=pathProduct ) Danh mục
                                +sub-menu(layoutProductCategory, pathProduct)
                        if(user)
                            li(class="sub-menu")
                                a(href="/cart" ) Giỏ hàng (#{miniCart ? miniCart : "0"})
                        if !user
                            li(class="sub-menu")
                                a(href="/user/login" ) Giỏ hàng #{"(0)"}
                        if(user)
                            li 
                                a(href="/user/info" ) #{user.userName}
                            li 
                                a(href="/user/logout" ) Đăng xuất
                        else 
                            li 
                                a(href="/user/login" ) Đăng nhập
                            li 
                                a(href="/user/register" ) Đăng ký
