include ../mixins/sub-menu.pug

header.header 

    .container 
        .row.align-items-center 
            .col-2 
                .inner-logo
                    a(href="/")
                        img(src=settingGeneral.logo, alt="Avt", width=max-width, height= "auto")
                    //- a(href="/" ) Trang chủ
            .col-4 
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type= "text"
                            placeholder= "Nhập từ khoá"
                            class="form-control"
                            name="keyword"
                            value= keyword
                        )
                        button(
                            type= "submit"
                            class="btn btn-primary"
                        ) Tìm

            .col-6
                .inner-menu.flex-wrap
                    ul 
                        //- li(class="d-flex align-items-center")
                        //-         a(href="/leon" ) Leon
                                    
                        li(class="sub-menu d-flex align-items-center")
                            - const pathProduct = "/product";
                            a(href=pathProduct ) 
                                i(class="bi bi-list fs-3 icon-centered")
                                +sub-menu(layoutProductCategory, pathProduct)
                        if(user)
                            //- li 
                            //-     a(href="/chat" )
                            //-         <i class="bi bi-chat-dots-fill fs-3 icon-centered"></i>
                            li 
                                a(href="/users/friends" ) Bạn bè
                            li 
                                a(href="/rooms-chat" ) Phòng chat
                            li(class="d-flex align-items-center")
                                a(href="/user/info" ) 
                                    i(class="bi bi-person fs-3 icon-centered")    
                                    //- | #{user.userName}
                            if(user)
                                li(class="sub-menu d-flex align-items-center ")
                                    a(href="/cart " )
                                        i(class="bi bi-cart3 fs-3 icon-centered") 
                                        span(class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger") #{miniCart ? miniCart : "0"}
                            li(class="d-flex align-items-center")
                                a(href="/user/logout" )
                                    i(class="bi bi-box-arrow-right fs-3 icon-centered")
                        else 
                            li 
                                a(href="/user/login" ) Đăng nhập
                            li 
                                a(href="/user/register" ) Đăng ký
                        if !user
                                li(class="sub-menu d-flex align-items-center")
                                    a(href="/user/login" )
                                        i(class="bi bi-cart3 fs-3 icon-centered") 
                                        span(class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger") #{"0"}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

