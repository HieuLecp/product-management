include ../mixins/sub-menu.pug

header.header 
    .container 
        .row.align-items-center 
            .col-2 
                .inner-logo
                    a(href="/")
                        span.calligraphy-text Laptop14
            .col-5 
                form(
                    action="/search"
                    method="GET"
                )
                    .input-group.d-flex.mb-0
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="button-search.btn-primary"
                        )
                            i(class="bi bi-search fs-4 icon-centered") 
            .col-5
                .inner-menu.d-flex.align-items-center.justify-content-end
                    ul
                        li(class="sub-menu d-flex align-items-center")
                            - const pathProduct = "/product";
                            a(href=pathProduct)
                                span Sản phẩm
                                +sub-menu(layoutProductCategory, pathProduct)
                        if(user)
                            li(class="sub-menu d-flex align-items-center") 
                                a(href="/list-order") Đơn hàng
                            li(class="sub-menu d-flex align-items-center") 
                                a(href="/users/friends") Bạn bè
                            li(class="d-flex align-items-center")
                                a(href="/user/info") 
                                    i(class="bi bi-person fs-4 icon-centered")    
                            li(class="sub-menu d-flex align-items-center")
                                a(href="/cart")
                                    i(class="bi bi-cart3 fs-4 icon-centered") 
                                    span(class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger") #{miniCart ? miniCart : "0"}
                            li(class="d-flex align-items-center")
                                a(href="/user/logout")
                                    i(class="bi bi-box-arrow-right fs-4 icon-centered")
                        else 
                            li(class="sub-menu d-flex align-items-center")
                                a(href="/user/login") Đăng nhập
                            li(class="sub-menu d-flex align-items-center")
                                a(href="/user/register") Đăng ký
                            li(class="sub-menu d-flex align-items-center")
                                a(href="/user/login")
                                    i(class="bi bi-cart3 fs-4 icon-centered") 
                                    span(class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger") #{"0"}
                    .contact-info.d-flex.align-items-center.ms-3
                        i(class="bi bi-telephone fs-5 me-2")
                        span 0123 456 789

link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")