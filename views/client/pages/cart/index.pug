extends ../../layouts/default.pug
include ../../mixins/box-head
include ../../mixins/product-layout
include ../../mixins/alert


block main
    +alert-success(3000)
    +alert-error(3000)

    .container.mb-3
        .row 
            .col-12 
                +box-head("Giỏ hàng")
                    
        .row   
            .col-12
                form(
                    action=`/checkout` 
                    method="GET"
                    form-change-multi
                )
                    table(
                        class="table table-striped table-hover shadow-sm rounded-3 text-center align-middle"
                        checkbox-multi
                    )
                        thead 
                            tr 
                                th 
                                    input(
                                        type="checkbox"
                                        name="checkall"
                                    ) 
                                th STT 
                                th Ảnh
                                th Tên
                                th Giá #{"(vnd)"}
                                th Số lượng
                                th Tổng tiền #{"(vnd)"}
                                th Hành động
                        tbody
                            if(cartDetail.products.length > 0)
                                each item, index in cartDetail.products
                                    tr
                                        td 
                                            input(
                                                type="checkbox"
                                                name="productIds[]"
                                                value=item.id  
                                            )
                                        td #{index + 1}
                                        td 
                                            img(src=item.productInfo.thumbnail, alt="sp1" width="80px")
                                        td 
                                            a(
                                                href=`product/detail/${item.productInfo.slug}`
                                                class="text-decoration-none text-dark fw-bold text-hover-primary"
                                            )  #{item.productInfo.title}
                                        td #{item.productInfo.priceNewFormat}
                                        td 
                                            input(
                                                type="number"
                                                name="quantity"
                                                value= item.quantity
                                                min="1"
                                                product-id= item.product_id
                                                style="width: 60px"
                                            )
                                        td #{item.totalPriceFormat}
                                        td 
                                            a(
                                                href=`cart/delete/${item.productInfo.id}`
                                                class="btn btn-danger"
                                            ) Xoá
                            else 
                                p Không có sản phẩm nào trong giỏ hàng!
                    h3(class="text-right" id="totalPriceCart") Tổng đơn hàng: #{cartDetail.totalPrice}  #{"(vnd)"}

                    div(class="text-right mt-3")
                        //- a(href="/checkout" class="btn btn-success" id="orderButton") Đặt hàng
                        button(
                            type= "submit"
                            class="btn btn-success"
                            id="orderButton"
                        ) Đặt hàng
            
            script(src="/js/cart.js")

