extends ../../layouts/default.pug
include ../../mixins/box-head
include ../../mixins/product-layout
include ../../mixins/alert
include ../../mixins/dashboard

block dashboard
    //- +dashboard

block main 
    +alert-success(3000)
    +alert-error(3000)

    .section-products-featured.my5
        .container
            .row 
                .col-12 
                    if(productFeatured.length > 0)
                        +box-head("Sản phẩm nổi bật")
                    
            +product-grid(productFeatured)

    .section-products-featured.my5
        .container
            .row 
                .col-12 
                    if(productNew.length > 0)
                        +box-head("Sản phẩm mới")
                    
            +product-grid(productNew)

    if(user)
        //- Nút mở chatbot
        #chat-toggle
            <img src="/images/chatBot.jpeg" class="avatar">
            //- i.fa-solid.fa-comments

        //- Khung chatbot (ẩn mặc định)
        #chat-container(style="display: none;")
            .chat-header
                span Leo
                button#close-chatbot X

            #chatbox

            form#chatForm
                input#userInput(type="text" placeholder="Nhập tin nhắn..." required)
                button(type="submit")
                    i.fa-solid.fa-paper-plane

block script 
    script(type="module" src="/js/leon.js")