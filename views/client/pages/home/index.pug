extends ../../layouts/default.pug
include ../../mixins/box-head
include ../../mixins/product-layout
include ../../mixins/alert
include ../../mixins/dashboard

block dashboard
    //- +dashboard

block main 
    +alert-success(3000)
    +alert-error(3000)

    // Popup quảng cáo
    if popupBanner
        #popup-overlay.popup-overlay
            #popup.popup
                button#close-popup.close-btn X
                .popup-content
                    img(src=popupBanner.image alt=popupBanner.title style="width: 100%; height: auto; border-radius: 10px;")
                    h2 #{popupBanner.title}
                    p #{popupBanner.description}
                    a.btn.btn-primary(href=popupBanner.link style="margin-top: 1rem;") Mua ngay
                    p.contact-info 0366809374 | Văn Quán, Hà Đông

    // Thanh quảng cáo bên trái
    if adLeftBanner
        #ad-left.ad-banner
            .ad-content
                img(src=adLeftBanner.image alt=adLeftBanner.title style="width: 100%; height: auto; border-radius: 10px;")
                h3 #{adLeftBanner.title}
                p #{adLeftBanner.description}
                a.btn.btn-primary(href=adLeftBanner.link) Mua ngay

    // Thanh quảng cáo bên phải
    if adRightBanner
        #ad-right.ad-banner
            .ad-content
                img(src=adRightBanner.image alt=adRightBanner.title style="width: 100%; height: auto; border-radius: 10px;")
                h3 #{adRightBanner.title}
                p #{adRightBanner.description}
                a.btn.btn-primary(href=adRightBanner.link) Mua ngay
    
    .section-banner.my-5
        .container
            .swiper-container
                .swiper-wrapper
                    // Slide 1
                    .swiper-slide
                        .banner-slide
                            // Banner trái
                            .banner-item(style="background: url('/images/banner1.jpeg') no-repeat center/cover;")
                                .banner-content
                                    h2 Laptop14 - Đỉnh cao công nghệ!
                                    p Mua laptop chính hãng, giá tốt nhất thị trường!
                                    p.price Giảm giá cực sâu trên mọi sản phẩm!
                                    a.btn.btn-primary(href="/product") Khám phá ngay
                            // Banner phải
                            .banner-item(style="background: url('/images/Dell Inspiron.jpg') no-repeat center/cover;")
                                .banner-content
                                    h2 Laptop Dell Inspiron
                                    p Cân mọi tác vụ
                                    p.price Giảm giá lên đến <span>20%</span>
                                    a.btn.btn-primary(href="/product/detail/laptop-dell-inspiron-14-5440-71034770") Mua ngay

                    // Slide 2
                    .swiper-slide
                        .banner-slide
                            // Banner trái
                            .banner-item(style="background: url('/images/nitro5.jpeg') no-repeat center/cover;")
                                .banner-content
                                    h2 Acer Nitro V
                                    p Giảm giá 20% cho laptop gaming
                                    p.price Chỉ từ <span>30.771.900đ</span>
                                    .gift
                                        img(src="/images/mouse1.jpeg" alt="Quà tặng chuột")
                                        span Tặng chuột gaming
                                    a.btn.btn-primary(href="/product/detail/laptop-gaming-acer-nitro-5-tiger-an515-58-773y") Mua ngay
                            // Banner phải
                            .banner-item(style="background: url('/images/msi.jpg') no-repeat center/cover;")
                                .banner-content
                                    h2 MSI Prestige
                                    p Giảm giá sốc 14%
                                    p.price Chỉ từ <span>25.714.000đ</span>
                                    a.btn.btn-primary(href="/product/detail/laptop-msi-prestige-14-ai-studio-c1udxg-058vn") Mua ngay

                // Nút điều khiển
                .swiper-button-next
                .swiper-button-prev
                // Chấm phân trang
                .swiper-pagination

    // Banner quảng cáo mới giữa các section
    .section-mid-banner.my-5
        .container
            .banner-item(style="background: url('/images/mid-banner.jpeg') no-repeat center/cover; padding: 20px; border-radius: 10px; text-align: center;")
                .banner-content
                    h3 Mua Laptop, Tặng Balo Cao Cấp!
                    p Nhanh tay sở hữu laptop chính hãng với ưu đãi đặc biệt!
                    a.btn.btn-primary(href="/accessories") Xem Ngay

    .section-products-featured.my-5
        .container
            .row 
                .col-12 
                    if productFeatured.length > 0
                        +box-head("Sản phẩm nổi bật")
                    
            +product-grid(productFeatured)

    .section-products-new.my-5
        .container
            .row 
                .col-12 
                    if productNew.length > 0
                        +box-head("Sản phẩm mới")
                    
            +product-grid(productNew)

    .section-products-sold.my-5
        .container
            .row 
                .col-12 
                    if productSolds.length > 0
                        +box-head("Sản phẩm bán chạy")
                    
            +product-grid(productSolds)

block script 
    script(src="/js/home.js")
    script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")