extends ../../layouts/default.pug
include ../../mixins/box-head
include ../../mixins/alert

block main
    +alert-success(3000)

    .product-detail
        .container.my-5
            button(
                class="btn btn-secondary"
                button-go-back
            ) Quay lại
            .row 
                .col-6 
                    .inner-thumb 
                        img(src= products.thumbnail alt= products.title)
                .col-6
                    div(class="inner-info")
                        h1(class="mb-4 title-detail") <b>#{products.title}</b>

                        if(products.category)
                            div(class="inner-category")
                                span Danh mục: 
                                a(href=`/product/${products.category.slug}`) #{products.category.title} 
                        if(products.priceNew)
                            div(class="inner-price-new") Giá mới: <span>#{products.priceNew} #{"(vnd)"}</span>
                        if(products.price)
                            div(class="inner-price-old") Giá cũ: <span>#{products.price} #{"(vnd)"}</span>
                        if(products.discountPercentage)
                            div(class="inner-percent") Giảm tới <span>#{products.discountPercentage}%</span>
                        if(products.stock)
                            div(class="inner-stock") Còn lại: <span>#{products.stock}</span> sản phẩm
                        
                        if(user)
                            form(
                                action= `/cart/add/${products.id}`
                                method="POST"
                            )
                                input(
                                    class="form-control mb-2"
                                    type= "number"
                                    name= "quantity"
                                    value= "1"
                                    min= "1"
                                    max= products.stock
                                )
                                button(
                                    type= "submit"
                                    class= "btn btn-success btn-block"
                                ) Thêm vào giỏ hàng
                        else
                            a(
                                href="/user/login"
                                class= "btn btn-success btn-block"
                            ) Thêm vào giỏ hàng
                    

        hr 

        .container.my-5 
            .row 
                .col-12 
                    +box-head("Mô tả sản phẩm")
                    .inner-desc !{products.description}

    script(src="/admin/js/product.js")
