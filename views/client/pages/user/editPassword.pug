extends ../../layouts/default.pug
include ../../mixins/alert


block main 
    +alert-success(3000)
    +alert-error(3000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đổi mật khẩu
                form(
                    action= "/user/info/editPassword"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") Mật khẩu cũ
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        label(for="newPassword") Mật khẩu mới
                        input(
                            type="password"
                            class="form-control"
                            id="newPassword"
                            name="newPassword"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required
                        )
                    div(class="form-group")
                        button(
                            type= "submit"
                            class="btn btn-primary btn-block form-control"
                        ) Đổi mật khẩu

