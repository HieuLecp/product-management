extends ../../layouts/default.pug
include ../../mixins/box-head
include ../../mixins/product-layout
include ../../mixins/alert



block main 
    +alert-success(3000)
    +alert-error(3000)

    .container.my-3 

        include ../../partials/list-btn-user

        .row 
            .col-12 
                +box-head("Danh sách người dùng")

    
        .row(data-user-notFriend=user.id)
            each user in users 
                .col-6(user-id= user.id)
                    div(class="box-users")
                        div(class="inner-avatar")
                            img(
                                src= (user.avatar ? user.avatar : "/images/avt.png")
                                alt= user.fullname
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-add-friend = user.id
                                ) Kết bạn
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-cancel-friend = user.id
                                ) Huỷ


    block script 
        script(type="module" src="/js/users.js")