extends ../../layouts/default.pug
include ../../mixins/box-head
include ../../mixins/product-layout
include ../../mixins/alert


block main
    +alert-success(3000)
    +alert-error(3000)

    .container.mb-3
        .row 
            .col-12 
                +box-head("Đặt hàng")

        .row   
            .col-12 
                table(class="table table-striped table-hover shadow-sm rounded-3 text-center align-middle")
                    thead 
                        tr 
                            th STT 
                            th Ảnh
                            th Tên
                            th Giá #{"(vnd)"}
                            th Số lượng
                            th Tổng tiền #{"(vnd)"}
                    tbody
                        if(cartDetail.products.length > 0)
                            each item, index in cartDetail.products
                                tr
                                    td #{index + 1}
                                    td 
                                        img(src=item.productInfo.thumbnail, alt="sp1" width="80px")
                                    td 
                                        span #{item.productInfo.title}
                                    td #{item.productInfo.priceNewFormat}
                                    td #{item.quantity}
                                    td #{item.totalPriceFormat}

                        else 
                            tr 
                                td(
                                    colspan= "7"
                                    class="text-center"
                                ) Giỏ hàng trống.
                if(cartDetail.products.length > 0)
                    h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPriceFormat} #{"(vnd)"}
            
        if(cartDetail.products.length > 0)
            .row 
                .col-12 
                    .order.p-4.my-4 
                        form(
                            action= "/checkout/order"
                            method= "POST"
                        )
                            input(type="hidden" name="productIds" value=listProductId.join(","))
                            div(class="form-group")
                                label(for="fullName") Họ tên
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    required
                                )
                                span(id="fullNameError" class="error-message")
                            div(class="form-group")
                                label(for="phone") Số điện thoại
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    required
                                )
                                span(id="phoneError" class="error-message")
                            div(class="form-group")
                                label(for="address") Địa chỉ nhận hàng
                                input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    required
                                )
                            div(class="form-group")
                                label(for="paymentType") Phương thức thanh toán
                                select(class="form-control" id="paymentType" name="paymentType" onchange="togglePaymentSection()" required)
                                    option(value="" selected) --Chọn--
                                    option(value="cod") Thanh toán khi nhận hàng (COD)
                                    option(value="momo") Thanh toán qua MoMo
                                    option(value="zalopay") Thanh toán qua ZaloPay

                            div(id="paymentDetails" class="mt-3" style="display: none;")
                                div(class="alert alert-info") Đã chọn phương thức thanh toán thành công.
                                
                                div(id="codPayment" style="display: none;")
                                    p Thanh toán <b>tiền mặt</b> khi nhận hàng. Vui lòng chuẩn bị đủ tiền mặt cho đơn hàng.
                                
                                div(id="momoPayment" style="display: none;")
                                    p Thanh toán qua <b>MoMo</b>. Bạn sẽ được chuyển hướng để thực hiện thanh toán.
                                
                                div(id="zalopayPayment" style="display: none;")
                                    p Thanh toán qua <b>ZaloPay</b>. Bạn sẽ được chuyển hướng để thực hiện thanh toán.

                            button(type="submit" class="btn btn-success btn-block mt-3") Đặt hàng

    
    script(src="/js/checkout.js")

    
