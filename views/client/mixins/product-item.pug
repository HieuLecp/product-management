mixin product-item(item)
    .col-4.mb-3 
        .product-item 
            .inner-image 
                img(src=item.thumbnail 
                alt=item.title 
                class="img-thumbnail"
                )
                if(item.featured == "1")
                    .inner-featured Nổi bật
            .inner-content 
                h3.inner-title 
                    a(href=`/product/detail/${item.slug}`) #{item.title}
                .inner-price-new #{item.priceNewFormat} #{"(vnd)"}
                .inner-price-old #{item.priceFormat} #{"(vnd)"}
                .inner-discount -#{item.discountPercentage}%
